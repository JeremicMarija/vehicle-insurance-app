<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- CSS -->
    <link rel="stylesheet" src="../public/css/style.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <!-- Font Awesome -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Web App Vehicle Insurance</title>
    <style>
     body{
       font-family: 'Poppins', sans-serif;
       background-color: #f0fdf0;
     }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-success navbar-expand-sm">
     <div class="container">
      <a href="/" class="navbar-brand"><i class="fa-solid fa-car-burst mr-1"></i>Insurance App</a>
      <div class="collapse navbar-collapse">
       <ul class="navbar-nav">
        <li class="nav-item">
         <a class="nav-link px-4" href="/insureds">Insureds</a>
        </li>
        <li class="nav-item">
         <a class="nav-link px-4" href="/vehicles">Vehicles</a>
        </li>
        <li class="nav-item">
         <a class="nav-link px-4" href="/materialDamages">Material Damages</a>
        </li>
       </ul>
      </div>
     </div>
    </nav>
    <div class="container mt-3">
     <div class="row">
       <div class="col">
         <p class="h3 text-success fw-bold">Update Vehicle</p>
       </div>
     </div>
    </div>
    <div class="container mt-3">
     <div class="row">
       <div class="col-md-4">
         <form action="/updateVehicle/{{vehicles.id}}/updateVehicle"   method="POST">
          <div class="mb-2">
           <input required type="text" class="form-control" placeholder="Brand" name="brand" value="{{vehicles.brand}}">
          </div>
          <div class="mb-2">
           <input required type="text" class="form-control" placeholder="Model" name="model" value="{{vehicles.model}}">
          </div>
          <div class="mb-2">
           <input required type="text" class="form-control" placeholder="Registartion Number" name="registration_number" value="{{vehicles.registration_number}}">
          </div>
          <div class="mb-2">
           <input hidden id="insured_id" required type="text" class="form-control" name="vehicles.insured_id" value="{{vehicles.insured_id}}">
           <!-- <script>
            console.log(document.getElementById('test').getValue());
           </script> -->
           <select name="insured_id" id="id" class="form-control">
             {{#insureds}}
              {{id}}
              <option {{selected = vehicles.insured_id === id}} value="{{id}}"> {{name}} {{surname}}</option>
             {{/insureds}}
           </select>
          </div>
          <button type="submit" class="btn btn-success">Update</button>
         </form>
       </div>
     </div>
    </div>
    <footer id="sticky-footer" class="bg-success text-white-50 fixed-bottom">
      <div class="container text-center">
        <small>Copyright &copy; Marija Jeremic</small>
      </div>
    </footer>
    <script src="/js/updateVehicle.js"></script> 
  </body> 
</html>