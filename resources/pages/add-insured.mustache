<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- CSS -->
    <link rel="stylesheet" href="css/style.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <!-- Font Awesome -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Web App Vehicle Insurance</title>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-success navbar-expand-sm">
     <div class="container">
      <a href="/" class="navbar-brand"><i class="fa-solid fa-car-burst mr-1"></i>Insurance App</a>
      <div class="collapse navbar-collapse">
       <ul class="navbar-nav">
        <li class="nav-item">
         <a class="nav-link px-4" href="/insureds">Insureds</a>
        </li>
        <li class="nav-item">
         <a class="nav-link px-4" href="/vehicles">Vehicles</a>
        </li>
        <li class="nav-item">
         <a class="nav-link px-4" href="/materialDamages">Material Damages</a>
        </li>
       </ul>
      </div>
     </div>
    </nav>
    <div class="container mt-3">
     <div class="row">
       <div class="col">
         <p class="h3 text-success fw-bold">Add Insured</p>
       </div>
     </div>
    </div>
    <div class="container mt-3">
     <div class="row">
       <div class="col-md-4">
         <form action="/add-insured/insertInsured"   method="POST">
          <div class="mb-2">
           <input required type="text" class="form-control" placeholder="First Name" name="name" value="{{#name}}{{name}}{{/name}}">
          </div>
          <div class="mb-2">
           <input required type="text" class="form-control" placeholder="Last Name" name="surname"value="{{#surname}}{{surname}}{{/surname}}">
          </div>
          <div class="mb-2">
           <input required type="date" class="form-control" placeholder="Data of Birth" name="date_of_birth" value="{{#date_of_birth}}{{date_of_birth}}{{/date_of_birth}}">
          </div>
          <div class="mb-2">
           <input required type="text" class="form-control" placeholder="Policy Number" name="policy_number" value="{{#policy_number}}{{policy_number}}{{/policy_number}}">
          </div>
          <div class="mb-2">
           <select required name="type_of_insurance" id="" class="form-control">
            <option value="">Choose...</option>
            <option value="TOTAL_INSURANCE">TOTAL_INSURANCE</option>
            <option value="PARCIAL_INSURANCE">PARCIAL_INSURANCE</option>
            <option value="ADDITIONAL_INSURANCE">ADDITIONAL_INSURANCE</option>
           </select>
          </div>
          <button type="submit" class="btn btn-success">Save</button>
         </form>
       </div>
     </div>
    </div>
    <footer id="sticky-footer" class="bg-success text-white-50 fixed-bottom">
      <div class="container text-center">
        <small>Copyright &copy; Marija Jeremic</small>
      </div>
    </footer>
  </body>
</html>